@article{holm_interactive_2013,
  title = {Interactive Effects of Chronic Deer Browsing and Canopy Gap Disturbance on Forest Successional Dynamics},
  author = {Holm, Jennifer A. and Thompson, Jonathan R. and McShea, William J. and Bourg, Norman A.},
  year = {2013},
  month = nov,
  journal = {Ecosphere},
