@article{gong_overestimated_2022,
  title = {Overestimated Gains in Water-Use Efficiency by Global Forests},
  author = {Gong, Xiao Ying and Ma, Wei Ting and Yu, Yong Zhi and Fang, Keyan and Yang, Yusheng and Tcherkez, Guillaume and Adams, Mark A.},
  year = {2022},
  journal = {Global Change Biology},
  volume = {28},
  number = {16},
  pages = {4923--4934},
