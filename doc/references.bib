@article{keenan_using_2012,
  title = {Using Model-Data Fusion to Interpret Past Trends, and Quantify Uncertainties in Future Projections, of Terrestrial Ecosystem Carbon Cycling},
  author = {Keenan, Trevor F. and Davidson, Eric and Moffat, Antje M. and Munger, William and Richardson, Andrew D.},
