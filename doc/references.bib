@article{wu_uncertainty_2023,
  title = {Uncertainty in {{US}} Forest Carbon Storage Potential Due to Climate Risks},
  author = {Wu, Chao and Coffield, Shane R. and Goulden, Michael L. and Randerson, James T. and Trugman, Anna T. and Anderegg, William R. L.},
  year = {2023},
